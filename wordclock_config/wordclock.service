[Unit]
Description=Wordclock
After=network.target

[Service]
ExecStart=/home/rpi_wordclock/venv/bin/python3 /home/rpi_wordclock/wordclock.py
WorkingDirectory=/home/rpi_wordclock/
Restart=always
RestartSec=5
KillSignal=SIGTERM
Type=simple
StandardOutput=journal
StandardError=journal
SyslogIdentifier=wordclock
NotifyAccess=all
User=root
Group=root
Nice=1

[Install]
WantedBy=multi-user.target